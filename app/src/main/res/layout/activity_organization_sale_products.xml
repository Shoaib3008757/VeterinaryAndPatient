<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ranglerz.veterinaryandpatient.OrganizationOfferJobsActivity"
    android:background="@drawable/background_wth_gradian">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="50dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <RelativeLayout
            android:id="@+id/rl_spiner_salary_range"
            android:layout_width="match_parent"
            android:layout_height="@dimen/et_width"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/spiner_background">

            <Spinner
                android:id="@+id/sp_select_qualification"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:entries="@array/product_categories"
                android:backgroundTint="@color/colorWhite"
                android:paddingLeft="4dp"
                android:paddingRight="4dp" />
        </RelativeLayout>


        <EditText
            android:id="@+id/et_job_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/et_width"
            android:hint="Job title"
            android:paddingLeft="10dp"
            android:paddingRight="4dp"
            android:inputType="text"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/et_background1"/>


        <EditText
            android:id="@+id/et_salary_range"
            android:layout_width="match_parent"
            android:layout_height="@dimen/et_width"
            android:paddingLeft="10dp"
            android:paddingRight="4dp"
            android:inputType="number"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="10dp"
            android:hint="Salary Range"
            android:background="@drawable/et_background1"/>

        <EditText
            android:id="@+id/et_required_experience"
            android:layout_width="match_parent"
            android:layout_height="@dimen/et_width"
            android:paddingLeft="10dp"
            android:paddingRight="4dp"
            android:inputType="number"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="10dp"
            android:hint="Required Experience"
            android:background="@drawable/et_background1"/>

        <EditText
            android:id="@+id/et_qualifications"
            android:layout_width="match_parent"
            android:layout_height="@dimen/et_width"
            android:paddingLeft="10dp"
            android:paddingRight="4dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="10dp"
            android:hint="Qualifications"
            android:background="@drawable/et_background1"/>


        <EditText
            android:id="@+id/et_description"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:paddingLeft="10dp"
            android:paddingRight="4dp"
            android:gravity="top"
            android:paddingTop="5dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="10dp"
            android:hint="Description"
            android:background="@drawable/et_background"
            android:layout_marginBottom="4dp"/>


    </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/bt_submit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/et_width"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="Submit"
        android:textAllCaps="false"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="10dp"
        android:textColor="@color/colorWhite"
        android:background="@drawable/button_press_syle"/>


</RelativeLayout>
