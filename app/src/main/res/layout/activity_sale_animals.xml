<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SaleAnimals"
    android:background="@drawable/background_wth_gradian">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fadeScrollbars="true"
        android:scrollbarStyle="insideInset">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="10dp">


                <RelativeLayout
                    android:id="@+id/rl_animal_name"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/et_width"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:background="@drawable/spiner_background">

                    <TextView
                        android:id="@+id/tv_animal_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="Animal Tyoe"
                        android:textColor="@color/colorWhite"/>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_animal_type"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/et_width"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:animateLayoutChanges="true"
                    android:background="@drawable/spiner_background">

                    <TextView
                        android:id="@+id/animal_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="Animal category"
                        android:textColor="@color/colorWhite"/>


                </RelativeLayout>


                <EditText
                    android:id="@+id/et_product_price"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/et_width"
                    android:background="@drawable/et_background1"
                    android:hint="Price"
                    android:textColorHint="@color/colorETHint"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:textSize="14sp"
                    android:maxLines="1"
                    android:inputType="number"
                    android:layout_gravity="center_horizontal"
                    android:singleLine="true"
                    android:textColor="@color/colorBlack"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:text="Images: "
                    android:textColor="@color/colorRed"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="20dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp">


                    <RelativeLayout
                        android:id="@+id/rl_image_1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/colorPrimary"
                        android:layout_weight="1"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp">

                        <TextView
                            android:id="@+id/tx_image_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="Image 1"
                            android:textColor="@color/colorWhite"/>

                        <ImageView
                            android:id="@+id/tv_image_1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="fitXY"/>

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rl_image_2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/colorPrimary"
                        android:layout_weight="1"
                        android:layout_marginRight="10dp">

                        <TextView
                            android:id="@+id/tx_image_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="Image 2"
                            android:textColor="@color/colorWhite"/>
                        <ImageView
                            android:id="@+id/tv_image_2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="fitXY"/>

                    </RelativeLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp">


                    <RelativeLayout
                        android:id="@+id/rl_image_3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/colorPrimary"
                        android:layout_weight="1"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp">

                        <TextView
                            android:id="@+id/tx_image_3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="Image 3"
                            android:textColor="@color/colorWhite"/>

                        <ImageView
                            android:id="@+id/tv_image_3"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="fitXY"/>

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rl_image_4"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/colorPrimary"
                        android:layout_weight="1"
                        android:layout_marginRight="10dp">

                        <TextView
                            android:id="@+id/tx_image_4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="Image 4"
                            android:textColor="@color/colorWhite"/>

                        <ImageView
                            android:id="@+id/tv_image_4"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="fitXY"/>

                    </RelativeLayout>


                </LinearLayout>

                <EditText
                    android:id="@+id/et_product_description"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:background="@drawable/et_background"
                    android:hint="Description"
                    android:textColorHint="@color/colorETHint"
                    android:paddingLeft="10dp"
                    android:gravity="top"
                    android:paddingTop="10dp"
                    android:paddingRight="4dp"
                    android:textSize="14sp"
                    android:textColor="@color/colorBlack"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="35dp"
                    android:layout_marginRight="35dp"/>

                <RelativeLayout
                    android:id="@+id/rl_bt_post"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:background="@drawable/button_press_syle"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="15dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:text="Post"
                        android:textStyle="bold"
                        android:textColor="@color/colorWhite"/>
                </RelativeLayout>


            </LinearLayout>




        </RelativeLayout>
    </ScrollView>

</RelativeLayout>
